<h2>EDIT YOUR DRINK</h2>
<div>
    <form action="/routes/drinks/{{_id}}/edit-drink" method="post">
    <div>
        <label for="name">Name</label>
        <input type="text" name="name" value="{{name}}">
    </div>
    <div>
        <label for="description">Description</label>
        <input type="text" description="description" value="{{description}}">
    </div>
    <div>
        <label for="origin">Origin</label>
        <input type="text" origin="origin" value="{{origin}}" >
    </div>
    <div>
        <label for="alcohol_content"> % Alcohol</label>
        <input type="text" alcohol_content="alcohol_content" value="{{alcohol_content}}">
    </div>
    </form>

    <button type="submit">EDIT</button>
</div> 
<div class="margin">

  <h2>CREATE YOUR DRINK</h2>

  <div class="flex">

    <form
      action="/drinks/create-drink"
      method="post"
      enctype="multipart/form-data"
    >

      <div>
        <label for="name">Name</label>
        <input type="text" name="name" />
      </div>

      <div>
        <label for="description">Description</label>
        <input type="text" name="description" />
      </div>

      <div>
        <label for="origin">Origin</label>
        <input type="text" name="origin" />
      </div>

      <div>
        <label for="alcohol_content"> % Alcohol</label>
        <input type="text" name="alcohol_content" />
      </div>

      <div>
        <label for="image">Upload Picture</label>
        <input type="file" name="image" />
      </div>

      <div class="index-btns top-margin">

        <button type="submit" class="btn btn-text"><p>Create</p></button>

      </div>

    </form>

  </div>

</div>
<h2>ADD YOUR DRINKS</h2>

<form class="search-form" action="/profile/add-drink" method="GET">
    <label for="search-bar"></label>
    <input type="text" id="search-bar" placeholder="Search your poison">
    <button class="search-btn"type="submit">Search</button>
</form>

<form action="/profile/add-drink/" method="POST"> 
{{#each drinks}}
    <div>
        <h3>Name: {{name}}</h3>
        <p>Description: {{description}}</p>
        <h4>Origin: {{origin}}</h4>
        <h4>Alcohol Content: {{alcohol_content}}%</h4>
        <h4>Likes: {{likes}}</h4>
        <img src="{{image}}" alt="imagen-birra" width="80px">
        
            <input type="number" min="0" placeholder="Quantity" value="0" name="quantity" id="quantity">
       
    </div>
    <hr>
{{/each}}
<button type="submit" >Add</button>
 </form>